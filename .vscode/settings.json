{
    // CRITICAL: Point to your proj0 conda Python
    "python.defaultInterpreterPath": "/home/adhni/miniconda3/envs/proj0/bin/python",
    // Alternative: Use environment variable (more flexible)
    // "python.defaultInterpreterPath": "${env:HOME}/miniconda3/envs/proj0/bin/python",
    // Auto-activate conda environment
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    // Set environment variables for terminal
    "terminal.integrated.env.linux": {
        "CONDA_DEFAULT_ENV": "proj0",
        "PATH": "/home/adhni/miniconda3/envs/proj0/bin:${env:PATH}"
    },
    // Code quality and formatting
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    "editor.formatOnSave": true,
    // Python-specific settings
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    // Jupyter notebook root
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    // Testing
    "python.testing.pytestEnabled": true,
    // Hide unnecessary files
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true,
        ".git": true,
        "*.pyc": true
    },
    "jupyter.kernels.excludePythonEnvironments": [
        "/home/adhni/miniconda3/envs/proj0"
    ]
}